{% extends 'melonRefappBundle::layout.html.twig' %}	
		
	{% block menu_deroulant %}
		{{ parent() }}
	{% endblock %}
	
	{% block login %}
	{% endblock %}

	{% block contenu %}
	<div id='corps'>
		<h2>Voici la liste de tout les Editeur(s)</h2></br>
			<div id="dt_example">
			<table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
    			<thead>
        		<tr>
            		<th>Nom</th>
            		<th>numero de tel</th>
            		<th>adresse</th>
            		<th>mail</th>
            		<th>responsable technique</th>
            		<th>responsable d'application</th>
            		<th>Actions</th>
        		</tr>
    			</thead>
   			 <tbody>
    			 {% for editeur in list_Editeur %}
                		<tr>	        			
                			<td>	
                				
                					{{ editeur.getNom() }}
                				              				           			
                			</td>
                			<td>   
                				          				
                					{{ editeur.getNumTel() }}
                					               				
                			</td>
                			<td>   
                				          				
                					{{ editeur.getNumero() }}
                					               				
                			</td>
                				<td>   
                				          				
                					{{ editeur.getRue() }}
                					               				
                			</td>
                				<td>   
                				          				
                					{{ editeur.getCodepostal() }}
                					               				
                			</td>
                				<td>   
                				          				
                					{{ editeur.getVille() }}
                					               				
                			</td>
                			<td>   
                				          				
                					{{ editeur.getMail() }}
                					               				
                			</td>
	               			<td>   
                				          				
                					{{ editeur.getResponsableTechnique() }}
                					               				
                			</td>
                			<td>   
                				          				
                					{{ editeur.getResponsableApplication() }}
                					               				
                			</td>
                			<td>	          
                				<a id="lienEditer" href="{{ path('_modifierEditeur', {'id': editeur.id}) }}">
                					{{ "Editer" }}
                				</a>
                				<a id="lienSupprimer" href="{{ path('_supprimerEditeur', {'id': editeur.id}) }}">
                					{{ "Supprimer" }}
                				</a>               				              				           			
                			</td>  
                			
        				</tr>

     			{% endfor %}       			
        	</tbody>
			</table>
		</div>
		<a href="{{ path('_administration') }}">
			<input  type="submit" class="btn-primary" name="supprimer" value="Retour"/>
		</a>		
		<a href="{{ path('_ajoutEditeur') }}">
			<input  type="submit" class="btn-primary" name="modifier "value="Ajouter un editeur"/>
		</a>

		
	</div>	
	{% endblock %}
	
	{% block javascript %}
		{{ parent() }}
		<script type="text/javascript" charset="utf-8">
					$(document).ready(function() {
						$('#example').dataTable();
					} );
		</script>	
	{% endblock %}

