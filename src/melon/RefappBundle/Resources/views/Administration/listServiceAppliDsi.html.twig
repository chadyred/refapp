{% extends 'melonRefappBundle::layout.html.twig' %}
		
	{% block menu_deroulant %}
		{{ parent() }}
	{% endblock %}
	
	{% block login %}
	{% endblock %}

	{% block contenu %}
	<div id='corps'>
		<h2>Voici la liste de tout les Service(s) applicatif(s) de la DSI</h2></br>
			<div id="dt_example">
			<table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
    			<thead>
        		<tr>
            		<th>Nom</th>
            		<th>Actions</th>
        		</tr>
    			</thead>
   			 <tbody>
    			 {% for serviceAppliDsi in list_ServiceAppliDsi %}
                		<tr>	        			
                			<td>	
                				
                					{{ serviceAppliDsi.getNom() }}
                				              				           			
                			</td>
                			<td>	          
                				<a id="lienEditer" href="{{ path('_modifierServiceAppliDsi', {'id': serviceAppliDsi.id}) }}">
                					{{ "Editer" }}
                				</a>
                				<a id="lienSupprimer" href="{{ path('_supprimerServiceAppliDsi', {'id': serviceAppliDsi.id}) }}">
                					{{ "Supprimer" }}
                				</a>             				              				           			
                			</td>  
                		</tr>
     			{% endfor %}       			
        	</tbody>
			</table>
		</div>
		<a href="{{ path('_administration') }}">
			<input  type="submit" class="btn-primary" name="supprimer" value="Retour"/>
		</a>		
		<a href="{{ path('_ajoutServiceAppliDsi') }}">
			<input  type="submit" class="btn-primary" name="modifier "value="Ajouter un service"/>
		</a>

		
	</div>	
	{% endblock %}
	
	{% block javascript %}
		{{ parent() }}
		<script type="text/javascript" charset="utf-8">
					$(document).ready(function() {
						$('#example').dataTable();
					} );
		</script>	
	{% endblock %}

